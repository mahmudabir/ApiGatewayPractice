{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "students-route": {
        "ClusterId": "students-cluster",
        "Match": {
          "Path": "/student-service/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/student-service" }
        ]
      },
      "teachers-route": {
        "ClusterId": "teachers-cluster",
        "Match": {
          "Path": "/teacher-service/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/teacher-service" }
        ]
      }
    },
    "Clusters": {
      "students-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001/"
          }
        }
      },
      "teachers-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002/"
          }
        }
      }
    }
  },
  "SwaggerUI": {
    "Endpoints": [
      {
        "Url": "/swagger/v1/swagger.json",
        "Name": "API Gateway"
      },
      {
        "Url": "/student-service/swagger/v1/swagger.json",
        "Name": "Student API"
      },
      {
        "Url": "/teacher-service/swagger/v1/swagger.json",
        "Name": "Teacher API"
      }
    ]
  }
}
